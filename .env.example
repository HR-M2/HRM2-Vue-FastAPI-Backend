# 应用配置
APP_NAME=HRM2-API
APP_ENV=development
DEBUG=true

# 数据库配置
DATABASE_URL=sqlite+aiosqlite:///./data/hrm2.db

# CORS 配置
CORS_ORIGINS=["http://localhost:5173","http://127.0.0.1:5173"]

# LLM 配置
LLM_MODEL=deepseek-ai/DeepSeek-V3
LLM_API_KEY=your-api-key-here
LLM_BASE_URL=https://api.siliconflow.cn/v1
LLM_TEMPERATURE=0.7
LLM_TIMEOUT=120
LLM_MAX_CONCURRENCY=2
LLM_RATE_LIMIT=60

# Embedding 配置 (可选)
EMBEDDING_MODEL=BAAI/bge-m3
EMBEDDING_API_KEY=your-siliconflow-api-key
EMBEDDING_BASE_URL=https://api.siliconflow.cn/v1/embeddings

# Reranker 配置 (可选，用于 RAG 精排)
RERANKER_MODEL=BAAI/bge-reranker-v2-m3
RERANKER_API_KEY=your-siliconflow-api-key
RERANKER_BASE_URL=https://api.siliconflow.cn/v1/rerank
